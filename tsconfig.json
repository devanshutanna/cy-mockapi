{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2017",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "strict": true,
    "types": ["cypress"],
    "esModuleInterop": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "build/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "paths": {
      "@swimlane/cy-mockapi": ["./"],
      "@swimlane/cy-mockapi/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "index.d.ts"],
  "exclude": ["node_modules/**", "cypress/fixtures/**"],
  "compileOnSave": false
}
